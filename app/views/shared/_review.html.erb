<%= form_for @review do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= hidden_field_tag 'game_id', "#{params[:id]}" %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.select :rating, ['1', '2', '3', '4', '5'] %>

  </p>
  <p>
    <%= f.submit "submit review" %>
  </p>
<% end %>
